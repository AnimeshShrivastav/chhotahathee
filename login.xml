<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"    android:layout_height="match_parent"  
android:orientation="vertical"   android:background="#F0F0F0" >


	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"  android:padding="10dp"  android:text="@string/loginText"
        android:textAllCaps="true"  android:textColor="#176CEC"        android:textStyle="bold" />

<EditText   android:layout_width="match_parent"   android:layout_height="wrap_content"   android:layout_centerHorizontal="true"  android:inputType="textEmailAddress"
   	 android:hint="@string/hint4mail"  android:id="@+id/umail"   android:background="#fff"  android:ems="10"  android:padding="12dp"   />

<EditText   android:layout_width="match_parent"   android:layout_height="wrap_content"   android:layout_centerHorizontal="true" android:layout_marginTop="1dp"
  android:padding="12dp" android:background="#fff" android:hint="@string/hint4pass"  android:id="@+id/upass" android:ems="10" android:inputType="textPassword" />
     
<EditText   android:layout_width="match_parent"   android:layout_height="wrap_content"   android:layout_centerHorizontal="true" android:inputType="phone"
   	 android:hint="@string/hint4cell"  android:id="@+id/ucell" />

<Button   android:id="@+id/login"    android:layout_width="match_parent"   android:layout_height="wrap_content"    android:text="Login/Signup" 
         android:onClick="login"    android:layout_margin="20dp"   android:background="#176CEC"  android:textColor="#fff" android:textStyle="bold"  />


  

</LinearLayout>

